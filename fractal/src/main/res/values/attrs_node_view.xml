<resources>
    <declare-styleable name="NodeView">

        // example values, delete eventually
        <attr name="exampleString" format="string" />
        <attr name="exampleDimension" format="dimension" />
        <attr name="exampleColor" format="color" />
        <attr name="exampleDrawable" format="color|reference" />

        // actual values
        <attr name="color" format="color"/>
        <attr name="colorWeight" format="float"/>

        <attr name="defType" format="enum">
            <enum name="components" value = "0"/>
            <enum name="matrix" value = "1"/>
        </attr>

        // component values
        <attr name="scaleX" format="float"/>
        <attr name="scaleY" format="float"/>
        <attr name="rotate" format="float"/>
        <attr name="shearX" format="float"/>
        <attr name="shearY" format="float"/>

        // matrix values
        <attr name="x1" format="float"/>
        <attr name="y1" format="float"/>
        <attr name="x2" format="float"/>
        <attr name="y2" format="float"/>
    </declare-styleable>
</resources>
