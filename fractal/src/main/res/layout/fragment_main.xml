<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeremy.fractal.MainActivity$PlaceholderFragment">

    <com.jeremy.fractal.FractalView
        android:id="@+id/main_fractal_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <RelativeLayout
        android:id="@+id/node_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        // generate node xml object
        <com.jeremy.fractal.NodeView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginTop="150px"
            android:layout_marginLeft="340px"

            custom:color="#ff0000"
            custom:colorWeight="0.3"
            custom:defType="components"
            custom:scaleX="0.5"
            custom:scaleY="0.5"/>
        <com.jeremy.fractal.NodeView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginTop="685px"
            android:layout_marginLeft="65px"

            custom:color="#00ff00"
            custom:colorWeight="0.3"
            custom:defType="components"
            custom:scaleX="0.5"
            custom:scaleY="0.5"/>
        <com.jeremy.fractal.NodeView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginTop="685px"
            android:layout_marginLeft="615px"

            custom:color="#0000ff"
            custom:colorWeight="0.3"
            custom:defType="components"
            custom:scaleX="0.5"
            custom:scaleY="0.5"/>
    </RelativeLayout>
</RelativeLayout>
